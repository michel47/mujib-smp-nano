{
  "manifest_version": 3,
  "name": "SMD Nano",
  "version": "1.0.0",
  "description": "Vaultless password manager: derives per-site passwords, stores nothing.",
  "action": { "default_popup": "popup.html" },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}